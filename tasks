#include <stdio.h>
#include <stdlib.h>

struct BitfieldStruct {
    unsigned int a : 3;
    unsigned int b : 3;
    unsigned int c : 2;
};

int main() {
    int arraySize = 5;
    struct BitfieldStruct *dynamicArray = NULL;

    dynamicArray = (struct BitfieldStruct *)malloc(arraySize * sizeof(struct BitfieldStruct));

    if (dynamicArray == NULL) {
        printf("Memory allocation failed.\n");
        return 1;
    }

    for (int i = 0; i < arraySize; i++) {
        dynamicArray[i].a = i;
        dynamicArray[i].b = i + 1;
        dynamicArray[i].c = i + 2;
    }

    for (int i = 0; i < arraySize; i++) {
        printf("Struct %d: a=%u, b=%u, c=%u\n", i, dynamicArray[i].a, dynamicArray[i].b, dynamicArray[i].c);
    }

    free(dynamicArray);

    return 0;
}

