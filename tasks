#include <stdio.h>

int main() {
    int sourceNumber = 5000;
    int targetNumber = 0;

    int bit5 = (sourceNumber >> 5) & 1;
    int bit6 = (sourceNumber >> 6) & 1;
    int bit7 = (sourceNumber >> 7) & 1;

    targetNumber |= (bit5 << 0);
    targetNumber |= (bit6 << 1);
    targetNumber |= (bit7 << 2);

    printf("Source number: %d (0x%X)\n", sourceNumber, sourceNumber);
    printf("Target number: %d (0x%X)\n", targetNumber, targetNumber);

    return 0;
}
