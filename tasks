#include <stdio.h>

int main() {
    float floatNumber = 123.456789;
    double doubleNumber = 987.654321;
    int intNumber = 123456789;

    // Before casting
    printf("Original float: %f\n", floatNumber);
    printf("Original double: %lf\n", doubleNumber);
    printf("Original int: %d\n", intNumber);

    // Typecasting with data loss
    int intFromFloat = (int)floatNumber;
    float floatFromDouble = (float)doubleNumber;
    char charFromInt = (char)intNumber;

    // After casting
    printf("Int from float: %d\n", intFromFloat);
    printf("Float from double: %f\n", floatFromDouble);
    printf("Char from int: %c\n", charFromInt);

    return 0;
}
